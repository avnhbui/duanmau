<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backlogin1"
    tools:context=".ManHinhDangNhap">

<ImageView
    android:layout_width="200sp"
    android:layout_height="200sp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="60sp"
    android:src="@drawable/logo"
    />
    <LinearLayout
        android:layout_width="360sp"
        android:layout_height="200sp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="30sp"
        android:background="@drawable/khung"
        >
        <EditText
            android:id="@+id/edtTaiKhoan"
            android:layout_width="300sp"
            android:layout_height="50sp"
            android:hint="Tai Khoan"
            android:layout_gravity="center_horizontal"
            android:padding="10sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/khung_nhap"
            />
        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_gravity="center_horizontal"
            android:layout_width="300sp"
            android:layout_marginTop="15sp"
            android:layout_height="50sp"
            android:hint="Mat Khau"
            android:padding="10sp"
            android:inputType="textPassword"
            android:background="@drawable/khung_nhap"
            />
        <CheckBox
                android:id="@+id/chkLuuMatKhau"
                android:layout_width="150sp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:checked="true"
                android:layout_height="48sp"
                android:text="Luu mat khau"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnDangNhap"
        android:layout_width="120sp"
        android:layout_height="60sp"
        android:src="@drawable/btnlogin1"
        android:layout_margin="15sp"
        android:background="#448AFF"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>